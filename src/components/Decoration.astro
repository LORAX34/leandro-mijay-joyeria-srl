---
const { title, subtitle } = Astro.props;
---

<header class="text-center mb-12 md:mb-16">
    <h2
        class="text-3xl md:text-4xl lg:text-5xl font-bold
                text-transparent bg-gradient-to-r from-silver-ligth via-white to-silver-ligth
                bg-clip-text mb-4 tracking-tight
                fade-in-up animate-duration-800"
    >
        {title}
    </h2>

    <p
        class="text-silver/80 text-lg md:text-xl font-light max-w-2xl mx-auto mb-6
                fade-in-up animate-duration-800 animate-delay-200"
    >
        {subtitle}
    </p>

    <!-- LÃ­nea decorativa -->
    <div class="flex justify-center items-center space-x-4">
        <div
            class="h-px bg-gradient-to-r from-transparent via-gold-light to-transparent
                    w-16 md:w-24 fade-in animate-duration-1000 animate-delay-400"
        >
        </div>
        <div
            class="w-2 h-2 bg-gold-light rounded-full
                    fade-in animate-duration-1000 animate-delay-600
                    animate-pulse animate-delay-1000"
        >
        </div>
        <div
            class="h-px bg-gradient-to-r from-transparent via-gold-light to-transparent
                    w-16 md:w-24 fade-in animate-duration-1000 animate-delay-400"
        >
        </div>
    </div>
</header>
