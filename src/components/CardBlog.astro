---
const { id, titulo, descripcion, autor, fecha, imagen, categoria, destacado } =
    Astro.props;

// Formatear fecha
const fechaFormateada = new Date(fecha).toLocaleDateString("es-ES", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<article
    class="group flex flex-col backdrop-blur-3xl items-start rounded-3xl bg-gradient-to-br from-white/95 to-gray-100/90 border border-gray-200/50 p-6 w-full max-w-[400px] gap-y-4 shadow-2xl shadow-black/30 transition-all duration-500 hover:shadow-3xl hover:shadow-primary/30 hover:bg-gradient-to-br hover:from-white hover:to-gray-50"
>
    <!-- Imagen del artículo -->
    <div
        class="relative w-full overflow-hidden rounded-2xl shadow-xl shadow-black/40 border border-gray-200/30 transition-all duration-500 group-hover:shadow-2xl group-hover:shadow-primary/20"
    >
        <img
            class="w-full h-48 object-cover transition-all duration-700 group-hover:scale-110 filter brightness-110 contrast-125 group-hover:brightness-100 group-hover:contrast-110"
            src={imagen}
            alt={titulo}
            loading="lazy"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-primary/30 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
        >
        </div>

        <!-- Badge de categoría -->
        <div
            class="absolute top-3 right-3 backdrop-blur-xl bg-primary/90 text-gold-light px-3 py-1 rounded-full text-xs font-medium uppercase tracking-wide shadow-lg"
        >
            {categoria}
        </div>
    </div>

    <!-- Información del artículo -->
    <div class="flex flex-col gap-y-3 w-full flex-1">
        <h3
            class="text-gray-900 font-bold text-xl leading-tight transition-colors duration-300 group-hover:text-primary line-clamp-2"
        >
            {titulo}
        </h3>

        <p
            class="text-gray-600 text-sm leading-relaxed line-clamp-3 transition-colors duration-300 group-hover:text-gray-800"
        >
            {descripcion}
        </p>

        <!-- Meta información -->
        <div class="flex items-center gap-4 text-xs text-gray-500">
            <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path
                        fill-rule="evenodd"
                        d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                        clip-rule="evenodd"></path>
                </svg>
                <span>{autor}</span>
            </div>
            <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path
                        fill-rule="evenodd"
                        d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                        clip-rule="evenodd"></path>
                </svg>
                <span>{fechaFormateada}</span>
            </div>
        </div>
    </div>

    <!-- Botón de leer más -->
    <div class="w-full mt-auto">
        <a
            class="group/button relative inline-flex items-center justify-center gap-3 px-6 py-3 text-white text-sm font-medium bg-gradient-to-r from-primary to-primary/80 rounded-xl shadow-lg shadow-primary/30 transition-all duration-300 hover:from-primary/90 hover:to-primary hover:shadow-xl hover:shadow-primary/50 hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:ring-offset-2 focus:ring-offset-white active:translate-y-0 overflow-hidden w-full"
            href={`/Blog/${id}`}
        >
            <span
                class="relative z-10 transition-colors duration-300 group-hover/button:text-white"
            >
                Leer artículo
            </span>

            <!-- Icono SVG de flecha -->
            <svg
                class="relative z-10 w-4 h-4 transition-all duration-300 group-hover/button:translate-x-1 group-hover/button:text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>

            <!-- Efecto de brillo -->
            <div
                class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/20 to-white/0 translate-x-[-100%] transition-transform duration-700 group-hover/button:translate-x-[100%]"
            >
            </div>
        </a>
    </div>
</article>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
