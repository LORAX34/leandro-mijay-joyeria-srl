---
import "@/styles/global.css";
import "@fontsource-variable/onest";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import { ClientRouter } from "astro:transitions";
import Analytics from "@vercel/analytics/astro";
const { title, showHeader = true, showFooter = true } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/Leandro_Mijail.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Leandro Mijay Joyería SRL - La joyería preferida por los famosos y la farándula"
        />
        <title>{title}</title>
        <ClientRouter />
        <Analytics />
    </head>
    <body class="min-h-screen flex flex-col">
        {showHeader && <Header />}
        <main class={showHeader ? "pt-20 md:pt-24 flex-1" : "flex-1"}>
            <slot />
        </main>
        {showFooter && <Footer />}
    </body>
</html>
